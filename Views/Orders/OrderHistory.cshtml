@model IEnumerable<ABCRetailers_Cameron_Chetty_CLDV6212_POE_P3.Models.OrderHistoryViewModel>
@{
    ViewData["Title"] = "Order History";
}
<div class="container-products">
    <h2>Order History</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total Price</th>
                <th>Order Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>R @order.TotalPrice</td>
                    <td>@order.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
