@model ABCRetailers_Cameron_Chetty_CLDV6212_POE_P3.Models.Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #051c42;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        .cart-container {
            max-width: 800px;
            margin: 30px auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table th, table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #f4f4f4;
        }

        table img {
            border-radius: 8px;
            margin-right: 10px;
        }

        .total-price {
            text-align: right;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .checkout-button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 8px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .checkout-button:hover {
            background-color: #218838;
        }

        .empty-cart {
            text-align: center;
            font-size: 16px;
            color: #777;
        }


        /* Style for the Remove button */
        .remove-button {
            padding: 8px 12px;
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: background-color 0.3s ease;
        }

            .remove-button:hover {
                background-color: #c82333;
            }
    </style>

</head>
<body>
    <div class="cart-container">
        <h2>Your Shopping Cart</h2>

        @if (Model != null && Model.OrderRequests.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderRequest in Model.OrderRequests)
                    {
                        <tr>
                            <td>
                                <img src="@orderRequest.Product.ImageUrlpath" alt="@orderRequest.Product.Name" width="100" height="100" />
                                <span>@orderRequest.Product.Name</span>
                            </td>
                            <td>R @orderRequest.Product.Price?.ToString("0.00")</td>
                            <td>
                                <button class="remove-button" onclick="removeFromCart(@orderRequest.Product.ProductId)">
                                    <i class="fas fa-trash-alt"></i> Remove
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="total-price">
                Total Price: R @Model.OrderRequests.Sum(or => or.Product.Price ?? 0).ToString("0.00")
            </div>
            <!-- Hidden input to store total price -->
            <input type="hidden" id="totalPrice" value="@Model.OrderRequests.Sum(or => or.Product.Price ?? 0).ToString("0.00")" />
            <button class="checkout-button" onclick="checkout()">Checkout</button>
        }
        else
        {
            <p class="empty-cart">Your cart is empty.</p>
        }
    </div>

    @section Scripts {
        <script>
            function checkout() {
                var totalPrice = document.getElementById('totalPrice').value;
                $.post('/MyWork/Checkout', { totalPrice: totalPrice }, function (response) {
                    if (response.success) {
                        alert('Order placed successfully');
                        window.location.href = '/MyWork/Index'; // Redirect to product listing after checkout
                    } else {
                        alert(response.message);
                    }
                });
            }
        </script>
        <script>
            function removeFromCart(productId) {
                $.post('/MyWork/RemoveFromCart', { productId: productId }, function (response) {
                    if (response.success) {
                        alert('Item removed from cart');
                        location.reload(); // Refresh the page to update the cart
                    } else {
                        alert(response.message);
                    }
                });
            }
        </script>

    }
</body>
</html>